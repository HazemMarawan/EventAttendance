@using EventAttendance.Enum;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var male_id = (int)Gender.Male;
    var female_id = (int)Gender.Female;
}

<div class="modal fade" id="manage_member_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <form action="" method="post" enctype='multipart/form-data'>
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-body">
                        <div class="form-row">
                            <input type="hidden" name="Id" id="Id" value="0" />
                            <div class="form-group col-md-12">
                                <center><img src="~/Images/userProfile.jpeg" width="150" height="150" id="imageProfile" class="rounded-circle shadow" alt="" /></center>
                            </div>
                            <div class="form-group col-md-6">
                                <label>First Name</label>
                                <input required name="FirstName" id="FirstName" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Last Name</label>
                                <input required name="LastName" id="LastName" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Username</label>
                                <input required name="Username" id="Username" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Password</label>
                                <input required name="Password" id="Password" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Code</label>
                                <input required name="Code" id="Code" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Organization</label>
                                <input required name="Organization" id="Organization" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Job Title</label>
                                <input required name="JobTitle" id="JobTitle" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Street Address</label>
                                <input required name="StreetAddress" id="StreetAddress" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Zip</label>
                                <input required name="Zip" id="Zip" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>City</label>
                                <input required name="City" id="City" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>CountryName</label>
                                <input required name="CountryName" id="CountryName" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Phone</label>
                                <input required name="Phone" id="Phone" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Mobile</label>
                                <input required name="Mobile" id="Mobile" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Email</label>
                                <input required name="Email" id="Email" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Home Page</label>
                                <input required name="HomePage" id="HomePage" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Facebook</label>
                                <input required name="Facebook" id="Facebook" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Whatsapp</label>
                                <input required name="Whatsapp" id="Whatsapp" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Linkedin</label>
                                <input required name="Linkedin" id="Linkedin" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Twitter</label>
                                <input required name="Twitter" id="Twitter" type="text" class="form-control radius-30" />
                            </div>
                            <div class="form-group col-md-6">
                                <label>Instagram</label>
                                <input required name="Insta" id="Insta" type="text" class="form-control radius-30" />
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="Image" name="Image" aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label>Status</label>
                                <select class="form-control" name="Active" id="Active">
                                    <option value="1">Active</option>
                                    <option value="2">Inactive</option>
                                </select>
                            </div>
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="page-header">
    <nav class="breadcrumb-one" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0);">Members</a></li>
        </ol>
    </nav>
    <div class="dropdown filter custom-dropdown-icon">
        <a class="dropdown-toggle btn" href="#" role="button" id="filterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="text">More</span> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down"><polyline points="6 9 12 15 18 9"></polyline></svg></a>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="filterDropdown">
            <a class="dropdown-item" id="add_member" data-value="<span>Show</span> : Add Member" href="javascript:void(0);">Add Member</a>
        </div>
    </div>
</div>


<div class="row">
    <div class="form-group col-4">
        <input class="form-control" type="text" id="text_search" name="text_search" placeholder="Search">
    </div>
    <div class="form-group col-2">
        <button id="search" class="btn btn-primary px-3 radius-30">Search</button>
    </div>
    <div class="form-group col-2">
        <button id="reset" class="btn btn-danger px-3 radius-30">Reset</button>
    </div>

</div>

<div class="card">
    <div class="card-body">

        <div class="table-responsive">
            <table id="memberTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Code</th>
                        <th>Mobile</th>
                        <th>Email</th>
                        <th>Social</th>
                        <th>QR</th>
                        <th>Active</th>
                        <th></th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>

@section scripts
{
    <script>
       $(document).ready(function () {

           var datatable = $('#memberTable')
                .DataTable({
                    "processing": true,
                    "serverSide": true,
                    "scrollX": true,
                    "stateSave": false,
                    "lengthChange": false,
                    "dom": 'Bfrtip',

                    "buttons": ['copy', 'excel', 'pdf', 'print'],
                    "pageLength":10,
                    "rowId": 'id',
                    "ajax": {
                        "url": "@Url.Action("Index", "Member")",
                        "type": "POST",
                        "datatype": "json",
                        "dataSrc": "data"
                    },
                    "columns": [
                        {
                            "data": "Id",
                            "searchable": true
                        },
                        {
                            "data": "FirstName", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = oData.FirstName + " " + oData.LastName;

                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "Code",
                            "searchable": true
                        },
                        {
                            "data": "Mobile",
                            "searchable": true
                        },
                        {
                            "data": "Email",
                            "searchable": true
                        },
                        {
                            "data": "Facebook", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "<ul>";
                                if (oData.Facebook)
                                    html += '<li><span style="font-weight:bold;">Facebook:</span> <a href="' + oData.Facebook + '">' + oData.FirstName + '-Facebook</a></li>';
                                if (oData.Whatsapp)
                                    html += '<li><span style="font-weight:bold;">Whatsapp:</span> <a href="' + oData.Whatsapp + '">' + oData.FirstName + '-Whatsapp</a></li>';
                                if (oData.Linkedin)
                                    html += '<li><span style="font-weight:bold;">Linkedin:</span> <a href="' + oData.Linkedin + '">' + oData.FirstName + '-Linkedin</a></li>';
                                if (oData.Insta)
                                    html += '<li><span style="font-weight:bold;">Insta:</span> <a href="' + oData.Insta + '">' + oData.FirstName + '-Instagram</a></li>';
                                if (oData.Twitter)
                                    html += '<li><span style="font-weight:bold;">Twitter:</span> <a href="' + oData.Twitter + '">' + oData.FirstName + '-Twitter</a></li>';
                                html += "</ul>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "Code", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if (oData.Code) {
                                    var memberLink = '@Url.Action("Show", "Profile", new { Code = "Code_Value" })';
                                    memberLink = memberLink.replace('Code_Value', oData.Code);
                                    var finalLink = window.location.origin + memberLink;
                                    
                                    html += ' <img id="barcode" src="https://api.qrserver.com/v1/create-qr-code/?data=' + finalLink + '&amp;size=100x100" alt="" title="Member Info" width="100" height="100" />';
                                }
                                    else
                                    html += "<span class='badge badge-danger'>No Code</span>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "Active", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";
                                if (oData.Active == 1)
                                    html += "<span class='badge badge-primary'>Yes</span>";
                                else
                                    html += "<span class='badge badge-danger'>No</span>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                        {
                            "data": "Id", "searchable": true,
                            fnCreatedCell: function (nTd, sData, oData, iRow, iCol) {
                                var html = "";

                                html += "<a class='edit' href='javascript:void(0)' title='Edit'><i class='far fa-edit'></i></a>&nbsp;";
                                html += "<a class='delete' href='javascript:void(0)' title='Delete'><i class='fas fa-trash'></i></a>";
                                $(nTd).html("<span class='action-column'>" + html + "</span>");
                            }
                        },
                    ]
                 });

            $('#search').on('click', function () {
                datatable.search($("#text_search").val());
                datatable.draw();
            });

            $('#text_search').on('keyup', function (e) {
                if (e.keyCode == 13)
                    $('#search_button').trigger('click');
            });

            $('#reset').on('click', function () {
                $("#text_search").val("");

                $('#search').trigger('click');

            });

           $("#add_member").click(function () {
               var modal = $('#manage_member_modal').clone();
                var action = '@Url.Action("saveMember", "Member")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Add Member');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {

                        datatable.draw();

                }, function (response) {

                }, function (dialog) {
                        $(document).on('change', '#image', function (event) {

                            var reader = new FileReader();
                            reader.onload = function () {
                                dialog.find('#imageProfile').attr('src', reader.result);
                            };
                            reader.readAsDataURL(event.target.files[0]);

                        });

                });
            });

            $(document).on("click", ".edit", function () {
                var data = datatable.row($(this).closest('tr')).data();
                console.log(data);
                var modal = $('#manage_member_modal').clone();
                var action = '@Url.Action("saveMember", "Member")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Edit Member');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        datatable.draw();

                }, function (response) {

                }, function (dialog) {

                    console.log(data);
                        dialog.find('#Id').val(data.Id);
                        dialog.find('#Code').val(data.Code);
                        dialog.find('#FirstName').val(data.FirstName);
                        dialog.find('#Username').val(data.Username);
                        dialog.find('#Password').val(data.Password);
                        dialog.find('#LastName').val(data.LastName);
                        dialog.find('#Organization').val(data.Organization);
                        dialog.find('#JobTitle').val(data.JobTitle);
                        dialog.find('#StreetAddress').val(data.StreetAddress);
                        dialog.find('#Zip').val(data.Zip);
                        dialog.find('#City').val(data.City);
                        dialog.find('#CountryName').val(data.CountryName);
                        dialog.find('#Phone').val(data.Phone);
                        dialog.find('#Mobile').val(data.Mobile);
                        dialog.find('#Email').val(data.Email);
                        //Social
                        dialog.find('#Facebook').val(data.Facebook);
                        dialog.find('#Insta').val(data.Insta);
                        dialog.find('#Linkedin').val(data.Linkedin);
                        dialog.find('#Whatsapp').val(data.Whatsapp);
                        dialog.find('#Twitter').val(data.Twitter);

                        dialog.find('#HomePage').val(data.HomePage);
                        dialog.find('#imageProfile').attr('src', data.ImagePath);
                        dialog.find('#active option[value=' + data.active + ']').attr('selected', 'selected');


                        $(document).on('change', '#Image', function (event) {

                            var reader = new FileReader();
                            reader.onload = function () {
                                dialog.find('#imageProfile').attr('src', reader.result);
                            };
                            reader.readAsDataURL(event.target.files[0]);

                        });
                });

            });

            $(document).on("click", ".delete", function () {
                var data = datatable.row($(this).closest('tr')).data();
                warningBox("Are you sure you want to delete this Member (<b>" + data.FirstName + " " + data.LastName + "</b>) ?", function () {
                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("deleteMember", "Member")',
                        contentType: "application/json; charset=utf-8",
                        data: { "id": data.Id },
                        datatype: "json",
                        success: function (data) {
                            datatable.draw();
                        },
                        error: function () {
                            alert("Dynamic content load failed.");
                        }
                    });
                });
            });

        });

    </script>
}

