@model EventAttendance.ViewModel.MemberViewModel
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/Content/AdminPanelAssets/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM STYLES -->
    <style>
        body {
            margin-top: 20px;
            color: #1a202c;
            text-align: left;
            background-color: #e2e8f0;
        }

        .main-body {
            padding: 15px;
        }

        .card {
            box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0,0,0,.125);
            border-radius: .25rem;
        }

        .card-body {
            flex: 1 1 auto;
            min-height: 1px;
            padding: 1rem;
        }

        .gutters-sm {
            margin-right: -8px;
            margin-left: -8px;
        }

            .gutters-sm > .col, .gutters-sm > [class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

        .mb-3, .my-3 {
            margin-bottom: 1rem !important;
        }

        .bg-gray-300 {
            background-color: #e2e8f0;
        }

        .h-100 {
            height: 100% !important;
        }

        .shadow-none {
            box-shadow: none !important;
        }
    </style>
    <script src="~/Content/AdminPanelAssets/assets/js/libs/jquery-3.1.1.min.js"></script>
    <script src="~/Content/AdminPanelAssets/bootstrap/js/popper.min.js"></script>
    <script src="~/Content/AdminPanelAssets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/AdminPanelAssets/plugins/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/Content/AdminPanelAssets/assets/js/app.js"></script>
    <script>
        $(document).ready(function () {
            App.init();
        });
    </script>
    <!-- END GLOBAL MANDATORY SCRIPTS -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
    <script src="~/Content/sweetalert2@10.js"></script>
    <script src="~/Scripts/factory.js"></script>
    <script src="~/Content/fontawesome/js/all.js"></script>
    <script src="~/Content/AdminPanelAssets/plugins/font-icons/feather/feather.min.js"></script>
</head>
<body>
    <div class="modal fade" id="manage_member_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <form action="" method="post" enctype='multipart/form-data'>
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal_title"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-body">
                            <div class="form-row">
                                <input type="hidden" name="Id" id="Id" value="@Model.Id" />
                                <div class="form-group col-md-12">
                                    <center><img src="~/Images/userProfile.jpeg" width="150" height="150" id="imageProfile" class="rounded-circle shadow" alt="" /></center>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>First Name</label>
                                    <input required name="FirstName" id="FirstName" type="text" value="@Model.FirstName" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Last Name</label>
                                    <input required name="LastName" id="LastName" type="text" value="@Model.LastName" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Username</label>
                                    <input required name="Username" id="Username" type="text" value="@Model.Username" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Password</label>
                                    <input required name="Password" id="Password" type="text" value="@Model.Password" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Code</label>
                                    <input required name="Code" id="Code" type="text" value="@Model.Code" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Organization</label>
                                    <input  name="Organization" id="Organization" value="@Model.Organization" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Job Title</label>
                                    <input  name="JobTitle" id="JobTitle" type="text" value="@Model.JobTitle" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Street Address</label>
                                    <input  name="StreetAddress" id="StreetAddress" value="@Model.StreetAddress" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Zip</label>
                                    <input  name="Zip" id="Zip" type="text" @Model.Zip class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>City</label>
                                    <input  name="City" id="City" type="text" value="@Model.City" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Country Name</label>
                                    <input  name="CountryName" id="CountryName" value="@Model.CountryName" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Phone</label>
                                    <input  name="Phone" id="Phone" value="@Model.Phone" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Mobile</label>
                                    <input  name="Mobile" id="Mobile" value="@Model.Mobile" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Email</label>
                                    <input  name="Email" id="Email" value="@Model.Email" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Home Page</label>
                                    <input  name="HomePage" id="HomePage" value="@Model.HomePage" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Facebook</label>
                                    <input  name="Facebook" id="Facebook" value="@Model.Facebook" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Whatsapp</label>
                                    <input  name="Whatsapp" id="Whatsapp" value="@Model.Whatsapp" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Linkedin</label>
                                    <input  name="Linkedin" id="Linkedin" value="@Model.Linkedin" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Twitter</label>
                                    <input  name="Twitter" id="Twitter" value="@Model.Twitter" type="text" class="form-control radius-30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Instagram</label>
                                    <input  name="Insta" id="Insta" type="text" value="@Model.Insta" class="form-control radius-30" />
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="Image" name="Image" aria-describedby="inputGroupFileAddon01">
                                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label>Status</label>
                                    <select class="form-control" name="Active" id="Active">
                                        @if (Model.Active == 1)
                                        {
                                            <option selected value="1">Active</option>
                                            <option value="2">Inactive</option>
                                        }
                                        else
                                        {
                                            <option value="1">Active</option>
                                            <option selected value="2">Inactive</option>
                                        }

                                    </select>
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="container">
        <div class="main-body">
            <div>
                <a href="@Url.Action("Logout","Guest")" style="float:right;"><i class="fas fa-sign-out-alt"></i></a>
            </div>
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                @if (Model.ImagePath != null)
                                {
                                    <img src="@Model.ImagePath" alt="Admin" class="rounded-circle" width="150">

                                }
                                else
                                {
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">

                                }
                                <div class="mt-3">
                                    <h4>@Model.FirstName @Model.LastName</h4>
                                    <p class="text-secondary mb-1">@Model.JobTitle</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg></h6>
                                <span class="text-secondary"><a href="@Model.HomePage">@Model.HomePage</a></span>
                            </li>

                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg></h6>
                                <span class="text-secondary"><a href="@Model.Twitter">@Model.Twitter</a></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg></h6>
                                <span class="text-secondary"><a href="@Model.Insta">@Model.Insta</a></span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg></h6>
                                <span class="text-secondary"><a href="@Model.Facebook">@Model.Facebook</a></span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0" style="font-weight:bold;">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.FirstName @Model.LastName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0" style="font-weight:bold;">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0" style="font-weight:bold;">Phone</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Phone
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0" style="font-weight:bold;">Mobile</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Mobile
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0" style="font-weight:bold;">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.StreetAddress
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a class="btn btn-info" href="javascript:void(0)" id="edit_profile">Edit</a>
                                    <a class="btn btn-info" href="@Url.Action("GenerateVCard","Profile",new { Code = Model.Code})">Generate VCF</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row gutters-sm">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <img id="barcode" src="https://api.qrserver.com/v1/create-qr-code/?data= @(Request.Url.Scheme + "://" + Request.Url.Host + ":" + Request.Url.Port + Url.Action("Show", "Profile", new { Code = Model.Code }))&amp;size=100x100" alt="" title="Member Info" width="100" height="100" />
                                        <div class="mt-3">
                                            <h4>QR Code</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <input type="text" value="@(Request.Url.Scheme + "://" + Request.Url.Host + ":" + Request.Url.Port + Url.Action("Show", "Profile", new { Code = Model.Code }))" class="form-control radius-30" />

                                        <div class="mt-3">
                                            <h4>Profile Link</h4>
                                            <small>Share it now.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>

        </div>
    </div>
    <script>
        $(document).ready(function () {

            $(document).on("click", "#edit_profile", function () {
                var modal = $('#manage_member_modal').clone();
                var action = '@Url.Action("Edit", "Guest")';
                modal.find('form').attr('action', action);
                modal.find('#modal_title').text('Edit');
                modal.execModal({
                    progressBar: 'progress_bar',
                    progressText: 'progress_text',
                }, function (response) {
                        location.reload();
            
                }, function (response) {

                }, function (dialog) {
                });

            });

        });
    </script>
</body>
</html>